{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,           // Facilita la interoperabilidad con ES modules
    "skipLibCheck": true               // Omite la verificación de tipos en archivos de declaración
  },
  "include": ["src/**/*"]
}
